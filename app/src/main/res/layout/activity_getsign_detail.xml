<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10.0dip">

                        <RelativeLayout
                            android:id="@id/yourZodiacSignBox"
                            android:layout_width="match_parent"
                            android:layout_height="150.0sp">

                            <TextView
                                android:id="@id/yourZodiacTitle"
                                android:layout_width="match_parent"
                                android:layout_height="50.0sp"
                                android:background="@drawable/boxline"
                                android:gravity="center"
                                android:text="ZodiacSign"
                                android:textColor="@android:color/black"
                                android:textSize="20.0sp" />

                            <TextView
                                android:id="@id/yourzodiacsign"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/yourZodiacTitle"
                                android:layout_marginTop="3.0dip"
                                android:background="@drawable/box_outline"
                                android:gravity="center"
                                android:text="hi"
                                android:textColor="@android:color/white"
                                android:textSize="45.0sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@id/yourageBox"
                            android:layout_width="match_parent"
                            android:layout_height="150.0sp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@id/yourZodiacSignBox"
                            android:layout_marginTop="30.0dip"
                            android:background="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/yourAgeTitle"
                                android:layout_marginLeft="1.0dip"
                                android:layout_marginTop="3.0dip"
                                android:background="@drawable/box_outline"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@id/ageYear"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.0"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:textColor="@android:color/white"
                                        android:textSize="25.0sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:background="#ffffffff"
                                        android:gravity="center"
                                        android:text="Year"
                                        android:textColor="@android:color/black"
                                        android:textSize="17.0sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@id/ageMonth"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.0"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:textColor="@android:color/white"
                                        android:textSize="25.0sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:background="#ffffffff"
                                        android:gravity="center"
                                        android:text="Month"
                                        android:textColor="@android:color/black"
                                        android:textSize="17.0sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.0"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@id/ageDays"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.0"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:textColor="@android:color/white"
                                        android:textSize="25.0sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:background="#ffffffff"
                                        android:gravity="center"
                                        android:text="Days"
                                        android:textColor="@android:color/black"
                                        android:textSize="17.0sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@id/yourAgeTitle"
                                android:layout_width="match_parent"
                                android:layout_height="50.0sp"
                                android:background="@drawable/boxline"
                                android:gravity="center"
                                android:text="YourAge"
                                android:textColor="@android:color/black"
                                android:textSize="20.0sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@id/nextBirthday"
                            android:layout_width="match_parent"
                            android:layout_height="150.0sp"
                            android:layout_below="@id/yourageBox"
                            android:layout_marginTop="30.0sp"
                            android:background="@android:color/transparent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/nextBirthdayTitle"
                                android:layout_marginTop="3.0dip"
                                android:background="@drawable/box_outline"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.0"
                                    android:background="@android:color/transparent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@id/nextageMonth"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.0"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:textColor="@android:color/white"
                                        android:textSize="25.0sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:background="#ffffffff"
                                        android:gravity="center"
                                        android:text="Month"
                                        android:textColor="@android:color/black"
                                        android:textSize="17.0sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.0"
                                    android:background="@android:color/transparent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@id/nextageDays"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.0"
                                        android:background="@android:color/transparent"
                                        android:gravity="center"
                                        android:textColor="@android:color/white"
                                        android:textSize="25.0sp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1.5"
                                        android:background="#ffffffff"
                                        android:gravity="center"
                                        android:text="Days"
                                        android:textColor="@android:color/black"
                                        android:textSize="17.0sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@id/nextBirthdayTitle"
                                android:layout_width="match_parent"
                                android:layout_height="50.0sp"
                                android:background="@drawable/boxline"
                                android:gravity="center"
                                android:text="NextBirthdayIn"
                                android:textColor="@android:color/black"
                                android:textSize="20.0sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@id/yourBirthDayBox"
                            android:layout_width="match_parent"
                            android:layout_height="150.0sp"
                            android:layout_below="@id/nextBirthday"
                            android:layout_marginTop="30.0sp"
                            android:background="@android:color/transparent">

                            <TextView
                                android:id="@id/yourbirthDayTitle"
                                android:layout_width="match_parent"
                                android:layout_height="50.0sp"
                                android:background="@drawable/boxline"
                                android:gravity="center"
                                android:text="YourBirthDay"
                                android:textColor="@android:color/black"
                                android:textSize="20.0sp" />

                            <TextView
                                android:id="@id/birth_Day"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/yourbirthDayTitle"
                                android:layout_marginTop="3.0dip"
                                android:background="@drawable/box_outline"
                                android:gravity="center"
                                android:textColor="@android:color/white"
                                android:textSize="45.0sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </ScrollView>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>