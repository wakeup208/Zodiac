<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/horo"
    android:orientation="vertical">

    <EditText
        android:id="@+id/yourname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/poppins_light"
        android:hint="Enter your name"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_rotate"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/horo12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Horoscope"
            android:textColor="#fff"
            android:textSize="30sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getstart"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="46dp"
            android:background="#1a297c"
            android:fontFamily="@font/poppins_regular"
            android:text="Go"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/selectbdayimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="46dp"
            android:src="@drawable/ic_cal" />
    </LinearLayout>

    <TextView
        android:id="@+id/yourbdate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/poppins_light"
        android:hint="Your Birthday"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Horoscope"
        android:textColor="#f0f1f7"
        android:textSize="26sp" />
</LinearLayout>
