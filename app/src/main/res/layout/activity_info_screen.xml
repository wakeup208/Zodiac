<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/horo"
    android:orientation="vertical">

    <EditText
        android:id="@id/yourname"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_marginLeft="46.0dip"
        android:layout_marginRight="46.0dip"
        android:background="@drawable/round_button"
        android:fontFamily="@font/poppins_light"
        android:hint="Enter your name"
        android:inputType="text"
        android:paddingLeft="20.0dip"
        android:textColor="#ff000000"
        android:textSize="18.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@id/img_rotate"
            android:layout_width="150.0dip"
            android:layout_height="150.0dip"
            android:layout_gravity="center"
            android:padding="15.0dip"
            android:src="@drawable/horo12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Horoscope"
            android:textColor="#ffffffff"
            android:textSize="30.0sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.0dip"
        android:orientation="horizontal">

        <Button
            android:id="@id/getstart"
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="46.0dip"
            android:background="#ff1a297c"
            android:fontFamily="@font/poppins_regular"
            android:text="Go"
            android:textColor="#ffffffff" />

        <ImageView
            android:id="@id/selectbdayimage"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="46.0dip"
            android:src="@drawable/ic_cal" />
    </LinearLayout>

    <TextView
        android:id="@id/yourbdate"
        android:layout_width="match_parent"
        android:layout_height="45.0dip"
        android:layout_marginLeft="46.0dip"
        android:layout_marginRight="46.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/round_button"
        android:fontFamily="@font/poppins_light"
        android:hint="Your Birthday"
        android:paddingLeft="20.0dip"
        android:paddingTop="8.0dip"
        android:textColor="#ff000000"
        android:textSize="18.0sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Horoscope"
        android:textColor="#fff0f1f7"
        android:textSize="26.0sp" />
</LinearLayout>