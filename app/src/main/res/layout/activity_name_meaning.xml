<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical">

    <ImageView
        android:id="@id/img_top"
        android:layout_width="150.0dip"
        android:layout_height="150.0dip"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="-40.0dip"
        android:layout_marginTop="-40.0dip"
        android:src="@drawable/rotateimage" />

    <RelativeLayout
        android:id="@id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_top"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="20.0dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/flEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="135.0dip"
                android:src="@drawable/middlenamechange" />

            <TextView
                android:id="@id/textViewname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-90.0dip"
                android:fontFamily="@font/poppins_regular"
                android:padding="5.0dip"
                android:text="name"
                android:textColor="#ffffffff"
                android:textSize="25.0sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/flEditor"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:id="@id/nametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45.0dip"
                android:layout_marginTop="10.0dip"
                android:fontFamily="@font/poppins_light"
                android:paddingLeft="25.0dip"
                android:textColor="#ffffffff"
                android:textSize="25.0sp" />

            <TextView
                android:id="@id/namemeantext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100.0dip"
                android:layout_marginTop="10.0dip"
                android:fontFamily="@font/poppins_light"
                android:paddingLeft="25.0dip"
                android:textColor="#ffffffff"
                android:textSize="25.0sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <Button
                    android:id="@id/nameChange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffffff"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Refresh"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <Button
                    android:id="@id/sharecard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffffff"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Share"
                    android:textColor="#ff000000" />
            </LinearLayout>
        </LinearLayout>
        >
    </RelativeLayout>
</RelativeLayout>