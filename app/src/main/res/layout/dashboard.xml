<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mainback"
    android:orientation="vertical">

    <Button
        android:id="@id/menu_loader"
        android:layout_width="22.0dip"
        android:layout_height="22.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/arrowdown" />

    <ImageView
        android:id="@id/rotateimage"
        android:layout_width="140.0dip"
        android:layout_height="140.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="-40.0dip"
        android:layout_marginTop="-40.0dip"
        android:src="@drawable/rotateimage" />

    <LinearLayout
        android:id="@id/toplayoutview"
        android:layout_width="match_parent"
        android:layout_height="158.0dip"
        android:layout_marginLeft="25.0dip"
        android:layout_marginRight="25.0dip"
        android:layout_marginTop="75.0dip"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <Button
            android:id="@id/findnamemeaning"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_marginBottom="3.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="3.0dip"
            android:background="@drawable/finalg"
            android:fontFamily="@font/poppins_regular"
            android:text="Check Name Meaning"
            android:textColor="@android:color/white"
            android:textSize="13.0dip" />

        <TextView
            android:id="@id/helloyourname"
            android:layout_width="match_parent"
            android:layout_height="40.0dip"
            android:layout_below="@id/image"
            android:layout_marginRight="70.0dip"
            android:fontFamily="@font/poppins_regular"
            android:text="Hello"
            android:textColor="#ffffffff"
            android:textSize="25.0dip" />

        <TextView
            android:id="@id/subtitle"
            android:layout_width="195.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:padding="3.0dip"
            android:text="Horoscope"
            android:textColor="#ffffffff"
            android:textSize="25.0dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toplayoutview"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="15.0dip"
        android:orientation="vertical">

        <GridView
            android:id="@id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="25.0dip"
            android:layout_marginRight="25.0dip"
            android:layout_marginTop="0.0dip"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:horizontalSpacing="12.0dip"
            android:numColumns="3"
            android:verticalSpacing="12.0dip" />
    </LinearLayout>
</RelativeLayout>