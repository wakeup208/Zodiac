<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="10.0dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15.0dip"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@id/fab_menuyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:menu_colorNormal="#ffff2f7a"
            fab:menu_colorPressed="#ffff2f7a"
            fab:menu_colorRipple="#ffff2f7a">

            <com.github.clans.fab.FloatingActionButton
                android:id="@id/fab1year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/texttospeech"
                fab:fab_colorNormal="#ffff2f7a"
                fab:fab_colorPressed="#ffff2f7a"
                fab:fab_colorRipple="#ffff2f7a" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@id/fab2year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wapp"
                fab:fab_colorNormal="#ffff2f7a"
                fab:fab_colorPressed="#ffff2f7a"
                fab:fab_colorRipple="#ffff2f7a" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@id/fab3year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sharebtn"
                fab:fab_colorNormal="#ffff2f7a"
                fab:fab_colorPressed="#ffff2f7a"
                fab:fab_colorRipple="#ffff2f7a" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@id/fab4year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clipboard"
                fab:fab_colorNormal="#ffff2f7a"
                fab:fab_colorPressed="#ffff2f7a"
                fab:fab_colorRipple="#ffff2f7a" />
        </com.github.clans.fab.FloatingActionMenu>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10.0dip">

        <TextView
            android:id="@id/yearlydate"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/gradient"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:padding="5.0dip"
            android:text="28/08/1996"
            android:textColor="#ff1a297c"
            android:textSize="20.0sp" />

        <TextView
            android:id="@id/yearlyhoroscopeText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/yearlydate"
            android:layout_marginBottom="35.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_light"
            android:scrollbars="vertical"
            android:textColor="#ffffffff"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_fshareyearly"
        android:layout_width="300.0dip"
        android:layout_height="300.0dip"
        android:visibility="gone">

        <RelativeLayout
            android:id="@id/rl_topyear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/img_signyearly"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:padding="10.0dip"
                android:src="@drawable/aries" />

            <TextView
                android:id="@id/cardsignyearly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dip"
                android:layout_toRightOf="@id/img_signyearly"
                android:text="Aries"
                android:textColor="#ff000000"
                android:textSize="30.0sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@id/tv_contentyearly"
            android:layout_width="250.0dip"
            android:layout_height="250.0dip"
            android:layout_below="@id/rl_topyear"
            android:layout_margin="10.0dip"
            android:inputType="textMultiLine"
            android:lines="10"
            android:maxLines="10"
            android:textColor="#ff000000"
            android:textSize="16.0sp" />
    </RelativeLayout>
</RelativeLayout>