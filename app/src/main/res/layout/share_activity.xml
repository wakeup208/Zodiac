<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical"
    android:weightSum="1.0">

    <ImageView
        android:id="@id/showrandomimage"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:visibility="gone" />

    <ImageView
        android:id="@id/showuploadimage"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.clans.fab.FloatingActionButton
            android:id="@id/shareit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="15.0dip"
            android:layout_marginRight="15.0dip"
            android:layout_marginTop="10.0dip"
            android:background="#ff1a297c"
            android:src="@drawable/sharebtn"
            app:backgroundTint="#ffff2f7a" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/relative"
        android:layout_width="375.0dip"
        android:layout_height="550.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="50.0dip"
        android:layout_weight="1.5">

        <ImageView
            android:id="@id/mergeimage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/sharetext"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0.0dip" />

        <TextView
            android:id="@id/sharetext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="You Horoscope Details match with this Person"
            android:textColor="#ff000000"
            android:textSize="25.0sp" />
    </RelativeLayout>
</LinearLayout>