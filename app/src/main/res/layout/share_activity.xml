<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/showrandomimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/showuploadimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/shareit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="#1a297c"
            android:src="@drawable/sharebtn"
            app:backgroundTint="#ff2f7a" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="375dp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/mergeimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sharetext"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp" />

        <TextView
            android:id="@+id/sharetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="You Horoscope Details match with this Person"
            android:textColor="#000000"
            android:textSize="25sp" />
    </RelativeLayout>
</LinearLayout>
